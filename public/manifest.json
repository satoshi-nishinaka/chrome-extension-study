{
  "manifest_version": 3,
  "name": "ShortCut Extension",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "storage",
    "tabs",
    "webRequest"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "version": "2.0.0",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "action": {
    "default_title": "",
    "default_icon": "icons/128.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "save_url_and_title": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Save Title and URL"
    },
    "save_url_and_title_for_markdown": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Save Title and URL for Markdown"
    }
  }
}